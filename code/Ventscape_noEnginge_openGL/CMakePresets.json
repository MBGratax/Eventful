{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Default",
      "displayName": "Default Config",
      "hidden": true,
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Ventscape-${presetName}",
      "installDir": "${sourceDir}/../../builds/Ventscape-${presetName}",
      "toolchainFile": "${sourceDir}/Extern/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {

      },
      "environment": {
        "CMAKE_BUILD_PARALLEL_LEVEL": "8",
        "CXX_STANDARD": "20"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug Config",
      "description": "Debug build using Ninja generator",
      "inherits": "Default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "PREPROCESSORS": "DEBUG_BUILD=1;LOGS_ENABLED=1"
      }
    },
    {
      "name": "Release",
      "displayName": "Release Config",
      "description": "Release build using Ninja generator",
      "inherits": "Default",
      "installDir": "${sourceDir}/../../builds/Ventscape",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      },
      "environment": {
        "PREPROCESSORS": ""
      }
    },
    {
      "name": "ReleaseWithLogs",
      "displayName": "RelWithDebugInfo Config",
      "description": "Release build with logs using Ninja generator",
      "inherits": "Default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      },
      "environment": {
        "PREPROCESSORS": "LOGS_ENABLED=1;"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Default",
      "displayName": "Default Build",
      "hidden": true,
      "description": "Default build using Ninja generator",
      "configurePreset": "Default",
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        }
      },
      "jobs": 8,
      "cleanFirst": true
    },
    {
      "name": "Debug",
      "displayName": "Debug Build",
      "description": "Debug build using Ninja generator",
      "inherits": "Default",
      "configurePreset": "Debug"
    },
    {
      "name": "Release",
      "displayName": "Release Build",
      "description": "Release build using Ninja generator",
      "inherits": "Default",
      "configurePreset": "Release"
    },
    {
      "name": "ReleaseWithLogs",
      "displayName": "RelWithDebugInfo Build",
      "description": "Release build with logs using Ninja generator",
      "inherits": "Default",
      "configurePreset": "ReleaseWithLogs"
    }
  ]
}
